{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["**/*.js", "**/*.mjs", "**/*.ts"],
  "exclude": ["build", "dist", "node_modules", "out"]
}
